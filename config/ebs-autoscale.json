{
    "mountpoint": "/scratch",
    "filesystem": "btrfs",
    "device": "/dev/xvdb",
    "lvm": {
      "volume_group": "autoscale_vg",
      "logical_volume": "autoscale_lv"
    },
    "detection_interval": 1,
    "limits": {
        "max_logical_volume_size": 8000,
        "max_ebs_volume_count": 16
    },
    "logging": {
        "log_file": "/var/log/ebs-autoscale.log",
        "log_interval": 300
    }
}